<div class="container m-5">
  <h1>Add a list</h1>

  <%= simple_form_for @list do |f| %>
    <%= f.input :name %>
    <br>
    <%= f.submit "Add", class: "btn btn-primary" %>
  <% end %>

  <div class="my-5">
    <%= link_to "Back to my lists", lists_path, class: "btn btn-secondary btn-sm" %>
  </div>
</div>
